<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/rlno"
            android:layout_width="200dp"
            android:textAlignment="center"
            android:layout_marginLeft="80dp"
            android:layout_height="47dp"
            android:background="@color/browser_actions_bg_grey"
            android:ems="10"
            android:hint="Enter Roll-number"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#424141"
            app:layout_constraintBottom_toTopOf="@+id/regButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.229" />

        <Button
            android:id="@+id/regstudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/teal_700"
            android:text="register Student" />

        <Button
            android:id="@+id/mrkatd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Mark attendance" />

        <Button
            android:id="@+id/showattendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="Show attendance" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>